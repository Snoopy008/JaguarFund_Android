<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="客户姓名"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/customerDetail_customerInfo_customerName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="15sp"
                android:textColor="#000000"
                android:gravity="center_vertical|left"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#c9c8c8"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="客户类型"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/customerDetail_customerInfo_customerType"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="15sp"
                android:textColor="#000000"
                android:gravity="center_vertical|left"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#c9c8c8"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="TA代码"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/customerDetail_customerInfo_taCode"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="15sp"
                android:textColor="#000000"
                android:gravity="center_vertical|left"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#c9c8c8"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="联系电话"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/customerDetail_customerInfo_telephone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="15sp"
                android:textColor="#000000"
                android:gravity="center_vertical|left"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#c9c8c8"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="证件类型"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/customerDetail_customerInfo_identityType"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="15sp"
                android:textColor="#000000"
                android:gravity="center_vertical|left"/>

        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#c9c8c8"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="证件号码"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/customerDetail_customerInfo_identityNumber"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="15sp"
                android:textColor="#000000"
                android:gravity="center_vertical|left"/>

        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#c9c8c8"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="联系地址"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/customerDetail_customerInfo_address"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="15sp"
                android:textColor="#000000"
                android:gravity="center_vertical|left"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#c9c8c8"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="投资份额(份)"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/customerDetail_customerInfo_inverstShare"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="15sp"
                android:textColor="#000000"
                android:gravity="center_vertical|left"/>

        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#c9c8c8"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="投资金额(元)"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/customerDetail_customerInfo_inverstAmount"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="15sp"
                android:textColor="#000000"
                android:gravity="center_vertical|left"/>

        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#c9c8c8"/>

    </LinearLayout>

</ScrollView>
