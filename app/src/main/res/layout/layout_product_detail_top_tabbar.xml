<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/prductDetail_productInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|center_vertical"
        android:layout_weight="1"
        android:textSize="20sp"
        android:padding="8dp"
        android:textColor="#fff46464"
        android:text="基本信息"/>

    <TextView
        android:id="@+id/prductDetail_netValueHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|center_vertical"
        android:layout_weight="1"
        android:textSize="20sp"
        android:padding="8dp"
        android:textColor="#000000"
        android:text="净值历史"/>

    <TextView
        android:id="@+id/prductDetail_investCustomers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|center_vertical"
        android:layout_weight="1"
        android:textSize="20sp"
        android:padding="8dp"
        android:textColor="#000000"
        android:text="投资客户"/>

    <TextView
        android:id="@+id/prductDetail_tradeRecords"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|center_vertical"
        android:layout_weight="1"
        android:textSize="20sp"
        android:padding="8dp"
        android:textColor="#000000"
        android:text="交易记录"/>

</LinearLayout>
