<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">
    <TextView
        android:id="@+id/tradeInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:textSize="19sp"
        android:textColor="#000000"
        android:text="客户甲申购了天倪一号500万份" />

    <TextView
        android:id="@+id/perNetValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tradeInfo"
        android:textSize="16sp"
        android:text="单位净值:1.0000元"/>

    <TextView
        android:id="@+id/amountMoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tradeInfo"
        android:textSize="15sp"
        android:text="总金额:500万元"/>

    <TextView
        android:id="@+id/tradeDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/perNetValue"
        android:text="2016-09-07"/>

</RelativeLayout>
